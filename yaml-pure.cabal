  other-extensions:    FlexibleContexts, FlexibleInstances, FunctionalDependencies, MultiParamTypeClasses, PostfixOperators, TypeSynonymInstances
  build-depends:       base >=4.8 && <4.9, bytestring >=0.10 && <0.11, dlist >=0.7 && <0.8, containers >=0.5 && <0.6, regex-compat >=0.95 && <0.96, text >= 1.2 && < 1.3, mtl >= 2.2 && < 2.3
